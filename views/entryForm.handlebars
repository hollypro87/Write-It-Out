{{!-- banner info on main.handlebars --}}

{{!-- navigation side bar --}}

<div class="container">
  <div class="row py-3">
    <div class="col-3 order-1" id="sticky-sidebar">
      <div class="sticky-top">
        <a href="/entry-form" id="entry">
          <button type="button" class="btn btn-block btn-outline-dark mb-3">
            Make A New Memory
          </button>
        </a>
        <a href="/reader" id="reader">
          <button type="button" class="btn btn-block btn-outline-dark mb-3">
            Search Memories
          </button>
        </a>
        <a>
          <button type="button" class="btn btn-block btn-outline-dark mb-3">
            Family
          </button>
        </a>
        <a>
          <button type="button" class="btn btn-block btn-outline-dark mb-3">
            Personal
          </button>
        </a>
        <a>
          <button type="button" class="btn btn-block btn-outline-dark mb-3">
            Professional
          </button>
        </a>
        <a>
          <button type="button" class="btn btn-block btn-outline-dark mb-3">
            Photos
          </button>
        </a>
        <a>
          <button type="button" class="btn btn-block btn-outline-dark mb-3">
            Biography
          </button>
        </a>
        <a>
          <button type="button" class="btn btn-block btn-outline-dark mb-3">
            Emergency Contacts
          </button>
        </a>
      </div>
    </div>


    {{!-- journal entry area --}}

    <div class="col-9 order-2" id="form-entry">
      <form>
        <div class="container">
          <div class="row py-3">
            <div class="col" id="main">
              <h3 class="text-center">Create Today's Journal Memory</h4>
                <h5 class="text-center" id="clock"></h5>
                <div class="form-group">
                  <textarea type="text" class="form-control" id="journalEntryTitle" rows="1"
                    placeholder="Journal Entry Title"></textarea>
                </div>
                <div class="form-group">
                  <textarea type="text" class="form-control" id="journalEntryBody" rows="9"
                    placeholder="What is on your mind today?"></textarea>
                </div>
                <div class="d-flex justify-content-between form-group row">
                  <a class="col-xs-3">
                    <select class="btn btn-outline-dark dropdown-toggle" type="button" id="category">
                      <option selected value="">All Categories</option>
                      <option value="Personal">Personal</option>
                      <option value="Family">Family</option>
                      <option value="Political">Political</option>
                      <option value="Professional">Professional</option>
                    </select>
                  </a>
                  <a class="col-xs-3">
                    <button type="button" class="btn btn-outline-dark">
                      Save Memory
                    </button>
                  </a>
                  <a class="col-xs-3">
                    <div class="input-group">
                      <input type="text" class="form-control" placeholder="New Category" aria-label="New Category"
                        aria-describedby="basic-addon2" />
                      <div class="input-group-append">
                        <button class="btn btn-sm btn-outline-secondary" type="button">
                          Submit
                        </button>
                      </div>
                    </div>
                  </a>
                </div>

            </div>
            <div class="col-3 order-2" id="sticky-sidebar">
              <div class="sticky-top">
                <p>Memory Search</p>
              </div>
              <div class="searchArticles">
                {{#each searchData}}
                <div class="projCards portItem" id={{this._id}}>
                  <h1><u>{{this.category}}</u></h1>
                  <div class="cardText">
                    <h5 class="projText">{{this.title}}</h5>
                  </div>
                </div>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
    </div>
    </main>
  </div>
</div>
</div>
    />
    <title>Memories</title>
  </head>

  <body>
    <main>
      <div class="container mt-5 pb-5">
        <div class="row justify-content-start">
          <div class="col-md-8 bg-light border p-lg-3">
            <div class="row">
              <div class="col-md-12">
                <h3 class="border-bottom pb-3">Memory</h3>
              </div>
              <div class="col-md-12">
                <div class="row">
                  <div class="media mt-3">
                    <div class="media-body p-2">
                      <p>
  {{!-- Not sure what way it should be --}}
  {{#each posts}}
    <h2> <a href="/blog/{{id}}">{{title}}</a> </h2>
    <p>
      {{content}}
    </p>
 {{/each}}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
